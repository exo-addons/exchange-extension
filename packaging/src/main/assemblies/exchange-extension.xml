<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>exchange-extension</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
			<includes>
				<include>${project.groupId}:exchange-extension-*:jar</include>
				<include>jcifs:jcifs:jar</include>
			</includes>
			<scope>provided</scope>
		</dependencySet>
		<dependencySet>
			<outputDirectory>webapps</outputDirectory>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
			<includes>
				<include>${project.groupId}:exchange-resources:war</include>
			</includes>
			<scope>provided</scope>
		</dependencySet>
	</dependencySets>
	<fileSets>
		<fileSet>
			<includes>
				<include>lib/*</include>
			</includes>
			<directory>src/main/assemblies</directory>
			<outputDirectory></outputDirectory>
		</fileSet>
		<fileSet>
			<includes>
				<include>conf/*</include>
			</includes>
			<directory>src/main/assemblies</directory>
			<outputDirectory></outputDirectory>
		</fileSet>
	</fileSets>
</assembly>
